{
    "identifier":"oTheme",
    "name":"Store interface 6",
    "screenshots":"https://api.smartonlineorders.com/assets/images/interface-6.png",
    "version":"1.0",
    "description":"This is a fun and interactive store interface with the categories shown at the top",
    "settings":[
        {
            "id":"width",
            "label":"Page width",
            "type":"input_text",
            "info":"Default page width recommendation is 1024px. <br /> You can make changes here",
            "default":"1024"
        },
        {
            "id":"categoriesMenuTopMargin",
            "label":"Categories Menu top margin for desktop display size",
            "type":"input_text",
            "info":"This will change the top margin for categories on desktop devices <br /> Recommend to change if you have a fixed header",
            "default":"0"
        },
        {
            "id":"categoriesMenuTopMarginMobile",
            "label":"Categories Menu top margin for mobile display size",
            "type":"input_text",
            "info":"This will change the top margin for categories on mobile devices <br /> Recommend to change if you have a fixed header",
            "default":"0"
        },
        {
            "id":"show_more_button",
            "label":"Display 'Show More'",
            "type":"onoff",
            "info":"Display “Show More” underneath each category. <br /> Recommended to display “Show More” if you have a lot of items for faster page loading time",
            "default":"on"
        },
        {
            "id":"showSearchSection",
            "label":"Display search section",
            "type":"onoff",
            "info":"Display a section for searching items.",
            "default":"off"
        },
        {
            "id":"showTopPicksSection",
            "label":"Display top selling items section",
            "type":"onoff",
            "info":"Display a section for top selling items.",
            "default":"off"
        },
        {
            "id":"allowspecialinstructionforitems",
            "label":"Special instructions for individual items",
            "type":"onoff",
            "info":"Allow customers to leave special instructions for individual items",
            "default":"on"
        },
